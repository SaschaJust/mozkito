<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.mozkito</groupId>
		<artifactId>mozkito</artifactId>
		<version>0.4-SNAPSHOT</version>
	</parent>
	<artifactId>mozkito-modules</artifactId>
	<name>mozkito modules [meta]</name>
	<description>Data Mining and Analyzation for Various Repositories</description>
	<packaging>pom</packaging>
	<modules>
		<module>mozkito-callgraph</module>
		<module>mozkito-causeeffect</module>
		<module>mozkito-changecouplings</module>
		<module>mozkito-codeanalysis</module>
		<module>mozkito-graphs</module>
		<module>mozkito-graphs-neo4j</module>
		<module>mozkito-graphs-titandb</module>
		<module>mozkito-genealogies</module>
		<module>mozkito-infozilla</module>
		<module>mozkito-issues</module>
		<module>mozkito-mappings</module>
		<module>mozkito-persistence</module>
		<module>mozkito-persons</module>
		<module>mozkito-untangling</module>
		<module>mozkito-versions</module>
	</modules>
	<dependencies>
		<dependency>
			<groupId>net.ownhero.dev</groupId>
			<artifactId>kisa</artifactId>
			<version>0.2-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>net.ownhero.dev</groupId>
			<artifactId>andama-exceptions</artifactId>
			<version>0.4-SNAPSHOT</version>
			</dependency>
		<dependency>
			<groupId>org.apache.derby</groupId>
			<artifactId>derby</artifactId>
			<version>10.9.1.0</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.mozkito</groupId>
				<artifactId>mozkito-maven-plugin</artifactId>
				<configuration>
					<connectionURL>jdbc:postgresql://quentin.cs.uni-saarland.de/mozkito</connectionURL>
					<includes>
						<param>**/model/*</param>
					</includes>
					<excludes>
						<param>**/model/*_.*</param>
						<param>**/model/*_.*</param>
						<param>**/model/*$*</param>
						<param>**/model/ChangeOperations.*</param>
						<param>**/model/JavaElementFactory.*</param>
						<param>**/model/JavaElementLocationSet.*</param>
						<param>**/model/Messages.*</param>
						<param>**/model/comparators/*</param>
						<param>**/model/MethodVertex.*</param>
						<param>**/changecouplings/model/*</param>
						<param>**/callgraph/model/*</param>
					</excludes>
					<openJPAOptions>
						<!-- <Log>DefaultLevel=WARN, Runtime=INFO, Tool=INFO</Log> -->
						<!-- <Log>slf4j</Log> -->
					</openJPAOptions>
				</configuration>
				<executions>
					<execution>
						<id>resources</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>meta</goal>
							<goal>persistence</goal>
						</goals>
					</execution>
					<execution>
						<id>compile</id>
						<phase>compile</phase>
						<goals>
							<goal>nls</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>com.cenqua.clover</groupId>
						<artifactId>clover</artifactId>
						<version>3.1.10</version>
					</dependency>
				</dependencies>
			</plugin>
			<!-- <plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>sonar-maven-plugin</artifactId>
				<version>2.0</version>
			</plugin> -->
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>enhance</id>
			<activation>
				<file>
					<exists>${basedir}/src/main/resources/enhance</exists>
				</file>
			</activation>
			<build>
				<resources>
					<!--
					 This is important! We do only copy the persistence.xml and $moduleName-persistence.xml
				     files to the META-INF directory (OpenJPA requires those files to be here).
					 We must NOT copy the messages.properties files used for NLS in the META-INF directory,
					 since this will break the bundle loader.
					-->
					<resource>
						<directory>src/main/resources</directory>
						<targetPath>META-INF</targetPath>
						<includes>
							<include>persistence.xml</include>
							<include>*-persistence.xml</include>
						</includes>
					</resource>
					<resource>
						<directory>src/main/resources</directory>
						<excludes>
							<exclude>persistence.xml</exclude>
							<exclude>*-persistence.xml</exclude>
						</excludes>
					</resource>
				</resources>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>openjpa-maven-plugin</artifactId>
						<version>1.2</version>
						<configuration>
							<includes>**/model/*.class</includes>
							<addDefaultConstructor>true</addDefaultConstructor>
							<enforcePropertyRestrictions>true</enforcePropertyRestrictions>
						</configuration>
						<executions>
							<execution>
								<id>enhancer</id>
								<phase>process-classes</phase>
								<goals>
									<goal>enhance</goal>
								</goals>
							</execution>
						</executions>
						<dependencies>
							<dependency>
								<groupId>org.apache.openjpa</groupId>
								<artifactId>openjpa</artifactId>
								<!-- set the version to be the same as the level in your runtime -->
								<version>2.2.1.1</version>
							</dependency>
							<dependency>
								<groupId>log4j</groupId>
								<artifactId>log4j</artifactId>
								<version>1.2.17</version>
							</dependency>
							<dependency>
								<groupId>org.slf4j</groupId>
								<artifactId>slf4j-log4j12</artifactId>
								<version>1.6.4</version>
							</dependency>
							<dependency>
								<groupId>org.slf4j</groupId>
								<artifactId>slf4j-api</artifactId>
								<version>1.6.4</version>
							</dependency>
						</dependencies>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
